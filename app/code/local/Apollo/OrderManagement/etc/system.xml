<?xml version="1.0"?>
<config>
  <tabs>
    <apollo_ordermanagement translate="label" module="apollo_ordermanagement">
      <label>Apollo Settings Tab</label>
      <sort_order>1</sort_order>
    </apollo_ordermanagement>
  </tabs>

  <sections>
    <apollo_ordermanagement_options translate="label" module="apollo_ordermanagement">
      <label>Setup</label>
      <tab>apollo_ordermanagement</tab>
      <frontend_type>text</frontend_type>
      <sort_order>1</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <section_one translate="label">
          <label>Credentials</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <access_token>
              <label>Access Token</label>
              <frontend_type>text</frontend_type>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment>API Access Token from Apollo</comment>
            </access_token>
            <integration_id>
              <label>Integration ID</label>
              <frontend_type>text</frontend_type>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <comment>Magento Integration ID from Apollo</comment>
            </integration_id>
          </fields>
        </section_one>
      </groups>
    </apollo_ordermanagement_options>
  </sections>
</config>